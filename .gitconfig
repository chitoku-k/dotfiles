[include]
    path = ~/.gitconfig.local

[alias]
    # 一覧
    branches = branch -a
    tags = tag
    stashes = stash list
    remotes = remote -v
    worktrees = worktree list

    # 表示
    precommit = diff --cached
    history = log -10 --date=short --format=format:'%C(yellow)%h %C(green)%cd %<(10,trunc)%C(blue)%cn %C(reset)%s'
    graph = log --graph --date=short --decorate=short --pretty=format:'%C(yellow)%h %C(green)%cd %<(10,trunc)%C(blue)%cn %C(reset)%s'

    # 取消
    discard = checkout --
    unstage = reset -q HEAD --
    uncommit = reset --mixed HEAD~
    amend = commit --amend

    # 無視
    preserve = update-index --assume-unchanged --
    unpreserve = update-index --no-assume-unchanged --

[diff]
    compactionHeuristic = true

[push]
    default = simple
